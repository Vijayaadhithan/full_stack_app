# Core database configuration
DATABASE_URL=postgresql://db_user:db_password@localhost:5432/db_name
DATABASE_REPLICA_URL=
DB_POOL_SIZE=50
DB_READ_POOL_SIZE=50
DB_SLOW_THRESHOLD_MS=200
USE_IN_MEMORY_DB=false

# Server configuration
NODE_ENV=development
PORT=5000
HOST=0.0.0.0
SESSION_SECRET=ChangeMeToAStrongSecret

# Session storage (postgres or redis)
SESSION_STORE=postgres
SESSION_TTL_SECONDS=
SESSION_REDIS_PREFIX=sess:
SESSION_COOKIE_SAMESITE=lax
SESSION_COOKIE_SECURE=false
SESSION_COOKIE_DOMAIN=
SESSION_TABLE_NAME=sessions
SESSION_SCHEMA_NAME=
SESSION_AUTO_CREATE_TABLE=true
SESSION_PRUNE_INTERVAL_SECONDS=

# CORS and URLs
FRONTEND_URL=http://localhost:5173
APP_BASE_URL=http://localhost:5000
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:5000
STRICT_CORS=false
NETWORK_CONFIG_PATH=
DEV_SERVER_HOST=
DEV_SERVER_PORT=5173
DEV_SERVER_HMR_HOST=
DEV_SERVER_HMR_PORT=5173
DEV_SERVER_HMR_PROTOCOL=ws
API_PROXY_TARGET=

# Redis (required in production)
REDIS_URL=redis://localhost:6379
DISABLE_REDIS=false
DISABLE_RATE_LIMITERS=false

# Background jobs
BOOKING_EXPIRATION_CRON=0 * * * *
PAYMENT_REMINDER_CRON=30 * * * *
LOW_STOCK_DIGEST_CRON=0 8 * * *
CRON_TZ=Asia/Kolkata
PAYMENT_REMINDER_DAYS=3
PAYMENT_DISPUTE_DAYS=7
JOB_LOCK_TTL_MS=600000
BOOKING_EXPIRATION_LOCK_TTL_MS=
PAYMENT_REMINDER_LOCK_TTL_MS=
LOW_STOCK_DIGEST_LOCK_TTL_MS=
JOB_LOCK_PREFIX=locks:jobs
DISABLE_JOB_LOCK=false

# Admin bootstrap
ADMIN_EMAIL=admin@yourdomain.com
ADMIN_PASSWORD=ChangeMeToAStrongPassword

# Logging/monitoring
LOG_LEVEL=info
LOG_FILE_PATH=logs/app.log
LOG_TO_STDOUT=true
LIVE_MONITOR_URL=

# HTTPS (optional)
HTTPS_ENABLED=false
HTTPS_KEY_PATH=
HTTPS_CERT_PATH=
HTTPS_PASSPHRASE=
HTTPS_CA_PATH=

# Client configuration
VITE_API_URL=http://localhost:5000
VITE_APP_BASE_URL=
VITE_FALLBACK_API_URL=
VITE_ENABLE_PERMISSION_DEBUG=false

# Firebase Phone Auth (optional)
VITE_FIREBASE_API_KEY=
VITE_FIREBASE_AUTH_DOMAIN=
VITE_FIREBASE_PROJECT_ID=
VITE_FIREBASE_STORAGE_BUCKET=
VITE_FIREBASE_MESSAGING_SENDER_ID=
VITE_FIREBASE_APP_ID=

# Capacitor live reload (optional)
CAPACITOR_SERVER_URL=
